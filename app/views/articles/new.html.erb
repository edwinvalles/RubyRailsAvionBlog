<%= form_with scope: :article, url: create_article_path, local: true do |f| %>
<!-- ^ defines the path for new articles -->

<h1>Blaga-blog</h1>
<h2>New Article</h2>

    <p>
        <% if @article.errors.any? %>
            <ul>
                <% @article.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
                <% end %>    
            </ul> 
        <% end %>
    </p>
<!-- ^ puts error checking -->

    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :body %>
        <%= f.text_field :body %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back to Articles', articles_path %>