<%= form_with method: :put, scope: :article, url: update_article_path(@article.id), local: true do |f| %>
    <!-- ^ defines the path for editing articles -->

    <h1>Blaga-blog</h1>
    <h2>Edit Article</h2>

        <p>
            <% if @article.errors.any? %>
                <ul>
                    <% @article.errors.full_messages.each do |message| %>
                        <li>
                            <%= message %>
                        </li>
                    <% end %>    
                </ul> 
            <% end %>
        </p>
    <!-- ^ puts error checking -->
    
        <p class='input_field' id='input_name'>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </p>
    
        <p class='input_field' id='input_body'>
            <%= f.label :body %>
            <%= f.text_field :body %>
        </p>
    
        <p>
            <%= f.submit %>
        </p>
    <% end %>
    
    <%= link_to 'Delete Article?', delete_article_path, method: :delete %>
    <%= link_to 'Back to Articles', articles_path %>
